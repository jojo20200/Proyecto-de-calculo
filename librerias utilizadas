  #calculando derivadas segun el orden

def num_deriv(f, x, dx=1e-6, n=1):
    if n == 1:
        return (f(x +dx) - f(x - dx)) / (2 * dx)
    elif n==2:
        return (f(x + dx) - 2 * f(x) + f(x - dx)) / dx**2
    else:
        return num_deriv(lambda t : num_deriv(f, t, dx=dx, n=1), x,  dx=dx, n=n-1)
    
